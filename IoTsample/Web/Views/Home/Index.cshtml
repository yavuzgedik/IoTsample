
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IoT | yavuzgedik.com</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

</head>
<body class="container">
    <br />
    <div class="col-lg-2 col-lg-offset-5 col-md-4 col-md-offset-4 centered">
        <center>
            <input id="toggle-event" type="checkbox" data-toggle="toggle" data-size="large"
                   checked="@(ViewBag.State == true ? true : false)">
        </center>
    </div>
    <div class="col-lg-2 col-lg-offset-5 col-md-4 col-md-offset-4 centered" id="console-event"></div>
</body>
</html>
<script>
     $(function () {
         $('#toggle-event').change(function () {
             //alert($(this).prop('checked'));
             
             $.ajax({
                 url: "{Web_Api_Url}",
                 type: "POST",
                 data: { "ID": null, "IsOpen": $(this).prop('checked'), "Date": null },
                 dataType: "json",
                 success: function () {
                     
                 },
                 error: function () {
                 }
             });
         })
     })
</script>

